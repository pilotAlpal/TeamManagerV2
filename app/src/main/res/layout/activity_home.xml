<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">



    <fragment android:name="com.segarra.lucas.teammanagerv2.View.OptionsFragment"
        android:id="@+id/f_ops"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        tools:layout="@layout/layout_options" />

    <fragment android:name="com.segarra.lucas.teammanagerv2.View.Abstract.ViewFragment"
        android:id="@+id/f_info"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        tools:layout="@layout/layout_info" />

</LinearLayout>